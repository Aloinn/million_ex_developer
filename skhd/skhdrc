# shift + alt + cmd + ctrl - 2 : yabai -m window --space 2; yabai -m space --focus 2
# alt + cmd + ctrl - r : brew services restart yabai

# 0x5A + t : open -a /Applications/iTerm.app
alt + cmd + ctrl - t : open -a /Applications/iTerm.app
alt + cmd + ctrl - q : open -a /Applications/Quip.app
alt + cmd + ctrl - s : open -a /Applications/Slack.app
alt + cmd + ctrl - o : open -a '/Applications/Microsoft Outlook.app'
alt + cmd + ctrl - n : open -a /Applications/Obsidian.app
alt + cmd + ctrl - c : open -a /Applications/Amazon Chime.app
alt + cmd + ctrl - v : open -a '/Applications/Visual Studio Code.app'
# alt + cmd + ctrl - i : open -a '/Applications/IntelliJ Idea.app'

