# focus window
alt + cmd + ctrl - h : yabai -m window --focus west || $(yabai -m display --focus west) 
# $(skhd --key "shift + cmd - 0x60")
alt + cmd + ctrl - l : yabai -m window --focus east || $(yabai -m display --focus east)
# $(skhd --key "shift + cmd - 0x61") 
alt + cmd + ctrl - j : yabai -m window --focus south || yabai -m display --focus south
alt + cmd + ctrl - k : yabai -m window --focus north || yabai -m display --focus north

shift + alt + cmd + ctrl - 0x21 : yabai -m window --focus west || $(yabai -m display --focus west)
shift + cmd - 0x21 : yabai -m window --focus west || $(yabai -m display --focus west) 
shift + alt + cmd + ctrl - 0x1E : yabai -m window --focus east || $(yabai -m display --focus east)
shift + cmd - 0x1E : yabai -m window --focus east || $(yabai -m display --focus east)
# $(skhd --key "shift + cmd - 0x61") 


# display swap
# alt + cmd + ctrl - 0x21 : yabai -m display --focus west || $(yabai -m display --focus south || $(yabai -m display --focus north))
# alt + cmd + ctrl - 0x1E : yabai -m display --focus east || $(yabai -m display --focus north || $(yabai -m display --focus south))



#  alt + cmd + ctrl - 0xyabai -m display --focus west
# alt + cmd + ctrl - l : yabai -m window --focus east || yabai -m display --focus east

# shift + cmd + alt + ctrl - s : yabai -m window --toggle sticky
shift + cmd + alt + ctrl - q : yabai --stop-service
shift + cmd + alt + ctrl - s : yabai --start-service


# MOVE
shift + cmd + alt + ctrl - h : yabai -m window --swap west || $(yabai -m window --display west; yabai -m display --focus west)
shift + cmd + alt + ctrl - l : yabai -m window --swap east || $(yabai -m window --display east; yabai -m display --focus east)
shift + cmd + alt + ctrl - k : yabai -m window --swap north || $(yabai -m window --display north; yabai -m display --focus north)
shift + cmd + alt + ctrl - j : yabai -m window --swap south || $(yabai -m window --display south; yabai -m display --focus south)


## DISPLAYS
cmd + alt + ctrl - 0x12 : yabai -m display --focus 2
cmd + alt + ctrl - 0x13 : yabai -m display --focus 1
cmd + alt + ctrl - 0x14 : yabai -m display --focus 3


